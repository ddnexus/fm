#!/usr/bin/env zsh

fm::panel-start() {
    if [[ $view == GREP ]] fm::notify $rg_message # survives reload
    $FM_HINTS && header+=${(%):-Press a shortcut or %F{yellow}$FM_KEY_MENU%f for the menu}

    local -P cmd='fm::panel --query=$query'
    if [[ $view == FAV ]] cmd+=' --with-nth=2..'
    if [[ $#header -gt 0 ]] cmd+=' --header=${(@F)header}'
    eval $cmd
}

